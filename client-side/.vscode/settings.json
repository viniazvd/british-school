{
	"files.exclude": {
		// Defaults
		"**/.git": true,
		"**/.DS_Store": true,
		// This excludes all node_modules folders from the explore tree
		"**/node_modules": true,
		// Root only
		// "node_modules": true,
		// Build dir
		"dist": true,
		// Generated docs
		"docs": true,
		// Generated files for test reports
		"reports/**/*": true
	},
	// Treat certain configuration files as JSON
	"files.associations": {
		"*.babelrc": "json",
		"*.eslintrc": "json",
		"*.htmllintrc": "json",
		"*.stylelintrc": "json"
	},
	// Vetur tooling configuration
	"vetur.format.scriptInitialIndent": true,
	"vetur.format.styleInitialIndent": true,
	"vetur.format.js.InsertSpaceBeforeFunctionParenthesis": true,
	"vetur.validation.script": true,
	"vetur.validation.style": true,
	// Emmet should be enabled on .vue files
	"emmet.syntaxProfiles": {
		"vue-html": "html",
		"vue": "html"
	},
	// CSS linting with Stylelint extension
	"stylelint.enable": true,
	"css.validate": false,
	"scss.validate": false,
	"eslint.options": {
		"extensions": [
			".js",
			".vue"
		]
	},
	// Settings for VS Code's ESLint extension
	"eslint.validate": [
		// Defaults
		{
			"language": "javascript",
			"autoFix": true
		},
		{
			"language": "javascriptreact",
			"autoFix": true
		},
		// Inline HTML
		{
			"language": "html",
			"autoFix": true
		},
		// Should also go through .vue files
		"vue"
	],
	// Project TODO/FIXME highlighting with plugin
	// https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight
	"todohighlight.isCaseSensitive": true,
	"todohighlight.keywords": [
		{
			"text": "BUG",
			"color": "white",
			"backgroundColor": "tomato",
			"overviewRulerColor": "tomato"
		},
		{
			"text": "FIXME:",
			"color": "hotpink",
			"backgroundColor": "transparent",
			"overviewRulerColor": "hotpink"
		},
		{
			"text": "FIXME",
			"color": "hotpink",
			"backgroundColor": "transparent",
			"overviewRulerColor": "hotpink"
		},
		{
			"text": "HACK",
			"color": "yellow",
			"backgroundColor": "transparent",
			"overviewRulerColor": "yellow"
		},
		{
			"text": "TODO:",
			"color": "mediumseagreen",
			"backgroundColor": "transparent",
			"overviewRulerColor": "mediumseagreen"
		},
		{
			"text": "TODO",
			"color": "mediumseagreen",
			"backgroundColor": "transparent",
			"overviewRulerColor": "mediumseagreen"
		},
		{
			"text": "NOTE",
			"color": "gainsboro",
			"backgroundColor": "transparent",
			"overviewRulerColor": "gainsboro"
		},
		{
			"text": "REVIEW",
			"color": "orange",
			"backgroundColor": "transparent",
			"overviewRulerColor": "orange"
		}
	]
}